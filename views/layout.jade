!!! 5
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    
    title=title
    link(rel='stylesheet/less', href='/less/style.less', type='text/css')
    script(src='/js/less.js')
  body
    #container
      header
        .headline
          #title
            h1=title
          ul.controls
            - if (user)
              li
                | Thanks, you've signed up as
                a.user(href=user.url)=user.name
              li
                | (
                a.undo(href='/undo') undo
                | )
        .details
      div#main(role='main')!=body
      footer

    script(src='/js/modernizr.js')
    script(src='/js/jquery.js')
    script(src='/js/enlist.js')
    